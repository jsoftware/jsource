%.o: %.cpp
	$(CXX) -c $(CPPFLAGS) -o$@ $^

%.o: %.c
	$(CC) -c -o $@ $< $(CFLAGS) $(CFLAGS_SIMD) $(CFLAGS_FMA) $(CFLAGS_AESNI) $(CFLAGS_AESARM)

%.o: %.S
	$(CC) $(GASM_FLAGS) -c -o $@ $<

$(OBJS_FMA) : CFLAGS_FMA := -mfma
$(OBJS_AESNI) : CFLAGS_AESNI := -maes
$(OBJS_AESARM) : CFLAGS_AESARM := -march=armv8-a+crc+crypto
$(ODIR)/$(TARGET) : $(OBJS) $(OBJS_FMA) $(OBJS_AESNI) $(OBJS_AESARM) $(SRC_ASM) $(DLLOBJS) $(LIBJRES)
	$(CC) -o $@ $(OBJS) $(OBJS_FMA) $(OBJS_AESNI) $(OBJS_AESARM) $(OBJS_ASM) $(SRC_ASM) $(DLLOBJS) $(LIBJDEF) $(LIBJRES) $(LDFLAGS)

$(LIBJRES): jdll.rc
	$(WINDRES) -D NDEBUG -o$@ $^

all: $(ODIR)/$(TARGET)

clean:
	rm -f $(OBJS) $(OBJS_FMA) $(OBJS_AESNI) $(OBJS_AESARM) $(SRC_ASM) $(DLLOBJS) $(LIBJRES)

.PHONY: all clean
